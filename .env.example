NEXT_PUBLIC_APP_NAME="No13teen"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Feature Flags
NEXT_PUBLIC_ENABLE_CONFETTI=true
NEXT_PUBLIC_ENABLE_SOUND_EFFECTS=false

# Mock Configuration
NEXT_PUBLIC_PAYMENT_CONFIRM_DELAY=20000
NEXT_PUBLIC_POLLING_INTERVAL_PAYMENT=5000
NEXT_PUBLIC_POLLING_INTERVAL_CALENDAR=2000

# Supabase (required for API routes; run migrations 001–011)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=  # From Supabase Dashboard → Settings → API → service_role (server-only; never expose to client)

# Future API Configuration
# NEXT_PUBLIC_API_BASE_URL=https://api.no13teen.com
# NEXT_PUBLIC_API_KEY=your_api_key_here

# Email (Resend)
# Use a real key only in local .env / .env.local, never commit it.
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL="No13teen <admin@example.com>"
